<mvc:View controllerName="pwaapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m">
    <Page id="page">
        <headerContent>
            <ObjectStatus id="objectstatusid" text="{= ${view>/isOnline} ? ${i18n>statusOnline} : ${i18n>statusOffline} }" state="{view>/state}" icon="{view>/icon}" />
        </headerContent>
        <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="zi_denuser" persistencyKey="SmartFilterBarKey"/>
        <smartTable:SmartTable id="smartTable" entitySet="zi_denuser" smartFilterId="smartFilterBar" tableType="ResponsiveTable" enableExport="true" useVariantManagement="true" useTablePersonalisation="true" header="Users" showRowCount="true" persistencyKey="SmartTableKey" enableAutoBinding="true">
            <smartTable:customToolbar>
                <OverflowToolbar>
                    <ToolbarSpacer />
                    <Button text="Create" press=".onCreate" type="Transparent" />
                    <Button text="Delete" press=".onDelete" type="Transparent" />
                </OverflowToolbar>
            </smartTable:customToolbar>
            <Table id="table" sticky="ColumnHeaders,HeaderToolbar" growing="true" growingThreshold="20" itemPress=".onListItemPress" mode="SingleSelectLeft">
                <items>
                    <ColumnListItem id="columnListItem" type="Navigation"/>
                </items>
            </Table>
        </smartTable:SmartTable>
        <footer>
            <OverflowToolbar>
                <Button icon="sap-icon://message-popup" text="{= ${message>/}.length }" type="Emphasized" press=".onMessageButtonPress" visible="{= ${message>/}.length > 0 }"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>